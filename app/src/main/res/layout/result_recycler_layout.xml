<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rv_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1A237E"
    android:padding="8dp"
    android:layout_marginBottom="4dp"
    tools:layout_editor_absoluteX="4dp"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/rv_name"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="haikyuu!"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/rv_imageView"
        android:layout_width="99dp"
        android:layout_height="126dp"
        android:layout_marginEnd="16dp"
        android:src="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/displayType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="TV"
        android:textColor="#fff"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_name"
        app:layout_constraintVertical_bias="0.329" />

    <TextView
        android:id="@+id/rv_displayScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8.57"
        android:textColor="#fff"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/displayType"
        app:layout_constraintEnd_toStartOf="@+id/rv_displayEpisodes"
        app:layout_constraintHorizontal_bias="0.733"
        app:layout_constraintStart_toEndOf="@+id/displayType"
        app:layout_constraintTop_toTopOf="@+id/displayType"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/rv_displayEpisodes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="140dp"
        android:text="Ep:13"
        android:textAlignment="viewEnd"
        android:textColor="#fff"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/displayType"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/displayType"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/rv_displayRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UG"
        android:textColor="#fff"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/displayType"
        app:layout_constraintEnd_toStartOf="@+id/rv_displayEpisodes"
        app:layout_constraintHorizontal_bias="0.26"
        app:layout_constraintStart_toEndOf="@+id/displayType"
        app:layout_constraintTop_toTopOf="@+id/displayType"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>