<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.AddProgressFragment">

    <TextView
        android:textStyle="bold"
        android:padding="8dp"
        android:background="@color/colorPrimary"
        android:textSize="28sp"
        android:textColor="@android:color/white"
        android:text="Add Progress"
        android:id="@+id/af_heading"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/af_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/af_heading"
        android:layout_marginStart="8dp"
        android:text="Steins Gate"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:src="@drawable/pic2"
        android:id="@+id/af_image"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_below="@+id/af_title"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp" />

    <TextView
        android:textStyle="bold"
        android:textSize="16sp"
        android:id="@+id/af_status_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/af_title"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:="@+id/af_image"
        android:text="Status:"
        android:textColor="@android:color/black" />

    <TextView
        android:textSize="16sp"
        android:id="@+id/af_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/af_title"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:="@+id/af_image"
        android:text="Aired"
        android:layout_toEndOf="@id/af_status_title"
        android:textColor="@android:color/black" />


    <TextView
        android:textStyle="bold"
        android:textSize="16sp"
        android:id="@+id/af_episodes_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/af_status_title"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:="@+id/af_image"
        android:text="Ep:"
        android:textColor="@android:color/black" />

    <TextView
        android:textSize="16sp"
        android:id="@+id/af_episodes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/af_status_title"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:="@+id/af_image"
        android:text="13"
        android:layout_toEndOf="@id/af_status_title"
        android:textColor="@android:color/black" />

</RelativeLayout>